<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"	
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean class="example.spring.core.UserService" id="doWelcome">
		<property name="name" value="James"></property>	
		<property name="age" value="70"></property>	
	</bean>
	<bean class="example.spring.core.UserService" id="userBean2">
		<constructor-arg value="Maria"/>
		<constructor-arg value="20"/>
	</bean>
	<bean class="example.spring.core.WelcomeService" id="myBean"/>
	
</beans>